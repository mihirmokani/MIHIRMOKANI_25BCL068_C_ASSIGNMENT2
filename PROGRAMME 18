#include <stdio.h>
int main() {
    int boys=0, girls=0, code;
    printf("Enter sex code for 50 students (1=boy, 2=girl):\n");
    for(int i=1; i<=50; i++){
        scanf("%d", &code);
        if(code==1) boys++;
        else if(code==2) girls++;
    }
    printf("Boys=%d\nGirls=%d", boys, girls);
    return 0;
}
